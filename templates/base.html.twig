    <script>
        //jquery for toggle dropdown menus
        $(document).ready(function(){
            //toggle sub-menus
            $(".sub-btn").click(function(){
                $(this).next(".sub-menu").slideToggle();
            });

            //toggle more-menus
            $(".more-btn").click(function(){
                $(this).next(".more-menu").slideToggle();
            });
        });

        //javascript for the responsive menu
        var menu = document.querySelector(".menu");
        var menuBtn = document.querySelector(".menu-btn");
        var closeBtn = document.querySelector(".close-btn");

        menuBtn.addEventListener("click", () => {
            menu.classList.add("active");
        });

        closeBtn.addEventListener("click", () => {
            menu.classList.remove("active");
        });
    </script>

<script>
    //configuracion boton de scroll hacia arriba 
  (window).scroll(function(){
    if($(this).scrollTop() > 300){ 
        $("#js_up").slideDown(300); 
    }else{ // si no
        $("#js_up").slideUp(300); 
    }
    });

    $("#js_up i").on('click', function (e) { 
    e.preventDefault(); 
    $("body,html").animate({ 
        scrollTop: 0 
    },700); 
    return false; 
    });
</script>

<script>
                   //configuracion del hide y show scroll del navbar 
                   // aplicado solo en tamanos de pantalla +1060px
                   
                  if($(window).width() >= 1060){

                    $(function(){
                      var lastScrollTop = 0, delta = 15;
                      $(window).scroll(function(event){
                      var st = $(this).scrollTop();
                    
                    if(Math.abs(lastScrollTop - st) <= delta)
                          return;
                    if ((st > lastScrollTop) && (lastScrollTop>0)) {
                      //downscroll code
                    $("header").css("top","-112px");
                  
                    } else {
                      //upscroll code
                    $("header").css("top","0px");
                    }
                      lastScrollTop = st; 
                      });
                    });
                  }
</script>

<script>
        //funcion para prevenir el scroll del body cuando el menu responsive esta abierto
        //no soportado en IOS 15 necesita adaptacion especial.
        function removeOverflow() {
            let element = document.getElementById("bodyq");
            element.classList.remove("bodyOverflow");
            }
    
            function addOverflow() {
            let element = document.getElementById("bodyq");
            element.classList.add("bodyOverflow");
            }
</script>

