{% extends 'base.html.twig' %}

{% block content %}

<style>
            .embed-container {
                position: relative;
                padding-bottom: 56.25%;
                height: 0;
                overflow: hidden;
            }
            .embed-container iframe {
                position: absolute;
                top:0;
                left: 0;
                width: 100%;
                height: 100%;
            }

            @media (min-width: 768px) {

                .embed-container {
                padding-bottom: 33.33%;
                } 

                }
</style>

<div class=" grid justify-center mt-40">
        <h1 class=" uppercase mb-2 text-2xl md:text-3xl text-center text-gray-700">Contacto Estadio</h1>
</div>

            <div class=" grid justify-center mx-5 md:mx-20 my-5 md:mb-20 embed-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1682.3729948660934!2d-116.99477864127807!3d32.5062176!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80d9480412852dcf%3A0x38aa5c4b91a67969!2sXoloshop%20Estadio!5e0!3m2!1ses!2smx!4v1638211117061!5m2!1ses!2smx" style="border:0;" allowfullscreen="" loading="lazy" class=" rounded-md"></iframe>
            </div>
            
            <div class="w-full">
                <div class="max-w-5xl mx-auto px-5 lg:px-8 mb-12">
                    <div class="bg-white w-full shadow rounded p-6 sm:p-12">
                        <h1 class="flex justify-center text-xl lg:text-3xl text-gray-600">Formulario de Contacto</h1>
                        <form action="" method="post">
                            <div class="md:flex items-center mt-8 md:mt-12">
                                <div class="w-full md:w-1/2 flex flex-col">
                                    <label class="font-thin leading-none">Nombre</label>
                                    <input type="text" id="name" name="name" class="leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200" />
                                </div>
                                <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
                                    <label class="font-thin leading-none text-gray-700">Telefono</label>
                                    <input type="tel" class="leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200"/>
                                </div>
                            </div>
                            <div class="md:flex items-center mt-4 lg:mt-12">
                                <div class="w-full md:w-1/2 flex flex-col">
                                    <label class="font-thin leading-none text-gray-700">Correo Electronico</label>
                                    <input type="email" id="email" name="email" class="leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200"/>
                                </div>
                                <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
                                    <label class="font-thin leading-none text-gray-700">Motivo</label>
                                    <input type="text" id="motivo" name="motivo" class="leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200"/>
                                </div>
                                
                            </div>
                            <div>
                                <div class="w-full flex flex-col mt-8">
                                    <label class="font-thin leading-none text-gray-700">Mensaje</label>
                                    <textarea type="text" id="message" name="message" class="h-40 text-base font-thin leading-none text-gray-700 p-3 focus:oultine-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200"></textarea>
                                </div>
                            </div>
                            <div class="flex items-center justify-center w-full">
                                <button class="mt-9 leading-none p-3.5 h-12 w-36 bg-black hover:bg-red-600 text-white rounded-md mx-auto text-xl flex justify-center">
                                    Enviar Mensaje
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

{% endblock %}