{% extends 'base.html.twig' %}

{% block content %}

    <style>
        .embed-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }
        .embed-container iframe {
            position: absolute;
            top:0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        @media (min-width: 768px) {

            .embed-container {
                padding-bottom: 33.33%;
            }

        }
    </style>

    <div class=" grid justify-center mt-40">
        <h1 class=" uppercase mb-2 text-2xl md:text-3xl text-center text-gray-700">Contactanos</h1>
    </div>

    <div class="w-full">
        <div class="max-w-5xl mx-auto px-5 lg:px-8 mb-12">
            <!-- Atencion al Aficionado -->
            <div class=" grid grid-cols-1 md:grid-cols-2 gap-2 my-8 items-center justify-center">
                <div class="p-5 bg-white flex items-center space-x-4 rounded-lg shadow-md cursor-pointer">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 md:h-20 md:w-20 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-5.971 18l.844-3.081c-.52-.902-.794-1.925-.794-2.973.001-3.279 2.668-5.946 5.946-5.946 1.591.001 3.084.62 4.206 1.744 1.123 1.124 1.741 2.618 1.74 4.207-.001 3.279-2.669 5.946-5.946 5.946-.995 0-1.976-.25-2.844-.724l-3.152.827zm3.298-1.903c.838.497 1.638.796 2.696.796 2.724 0 4.943-2.217 4.944-4.942.001-2.731-2.208-4.945-4.94-4.946-2.726 0-4.943 2.217-4.944 4.942 0 1.112.326 1.946.873 2.817l-.499 1.824 1.87-.491zm5.694-2.732c-.037-.062-.136-.099-.285-.174-.149-.074-.879-.434-1.015-.483-.136-.05-.235-.074-.334.074-.099.149-.384.483-.47.583-.087.099-.173.112-.322.037-.149-.074-.627-.231-1.195-.737-.442-.394-.74-.881-.827-1.029-.087-.149-.009-.229.065-.303l.223-.26.149-.248c.05-.099.025-.186-.012-.26l-.458-1.103c-.121-.29-.243-.25-.334-.255l-.286-.007c-.099 0-.26.037-.396.186s-.52.508-.52 1.24c0 .731.532 1.438.607 1.537.074.099 1.048 1.6 2.538 2.243.354.153.631.245.847.313.356.113.68.097.936.059.285-.043.879-.359 1.003-.706.123-.348.123-.645.086-.707z"/>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <h1 class="text-xl font-bold text-gray-700 mb-2 select-none">Atencion al aficionado xoloitzcuintles</h1>
                        <a href="https://bit.ly/38UZCQT" target="_blank" class="text-gray-600 w-80 text-md hover:underline hover:text-red-600">WhatsApp: +55 664 388 2502</a>
                    </div>
                </div>
                <div class="p-5 bg-white flex items-center space-x-4 rounded-lg shadow-md cursor-pointer">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 md:h-20 md:w-20 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.02c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm0 12.55l-5.992-4.57h11.983l-5.991 4.57zm0 1.288l-6-4.629v6.771h12v-6.771l-6 4.629z"/>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <h1 class="text-xl font-bold text-gray-700 mb-2 select-none">Correo electr√≥nico</h1>
                        <a href="mailto:aficion@xolos.com.mx" class="text-gray-600 w-80 text-md hover:underline hover:text-red-600">aficion@xolos.com.mx</a>
                    </div>
                </div>
            </div>
            <!-- Fin Atencion al Aficionado -->
            <div class="bg-white w-full shadow rounded p-6 sm:p-12">
                {# Toast Alert #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert-toast fixed bottom-0 right-0 m-8 w-5/6 md:w-full max-w-sm">
                            <input type="checkbox" class="hidden" id="footertoast">
                            <div class="flas-{{ label }} flex items-start justify-between w-full p-2 bg-green-600 rounded shadow-lg text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 items-center mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                {{ message }}
                                <label class="close cursor-pointer" title="close" for="footertoast">
                                    <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                                        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
                                    </svg>
                                </label>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
                <h1 class="flex justify-center text-xl lg:text-3xl text-gray-600">Formulario de Contacto</h1>
                {{ form_start(form) }}
                <div class="md:flex items-center mt-8 md:mt-12">
                    <div class="w-full md:w-1/2 flex flex-col">
                        <label class="font-thin leading-none">{{ form_label(form.nombre) }}</label>
                        {{ form_widget(form.nombre, {'attr' : { 'class': 'leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200' }}) }}
                        <li class="list-none text-red-600 text-sm font-thin">{{ form_errors(form.nombre) }}</li>
                    </div>
                    <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
                        <label class="font-thin leading-none">{{ form_label(form.telefono) }}</label>
                        {{ form_widget(form.telefono, {'attr' : { 'class': 'leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200' }}) }}
                        <li class="list-none font-thin  text-red-600 text-sm">{{ form_errors(form.telefono) }}</li>
                    </div>
                </div>
                <div class="md:flex items-center mt-4 lg:mt-12">
                    <div class="w-full md:w-1/2 flex flex-col">
                        <label class="font-thin leading-none">{{ form_label(form.correo) }}</label>
                        {{ form_widget(form.correo, {'attr' : { 'class': 'leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200' }}) }}
                        <li class="list-none font-thin  text-red-600 text-sm">{{ form_errors(form.correo) }}</li>
                    </div>
                    <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
                        <label class="font-thin leading-none">{{ form_label(form.asunto) }}</label>
                        {{ form_widget(form.asunto, {'attr' : { 'class': 'leading-none font-thin text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200' }}) }}
                        <li class="list-none font-thin  text-red-600 text-sm">{{ form_errors(form.asunto) }}</li>
                    </div>
                </div>
                <div>
                    <div class="w-full flex flex-col mt-8">
                        <label class="font-thin leading-none">{{ form_label(form.mensaje) }}</label>
                        {{ form_widget(form.mensaje, {'attr' : { 'class': 'h-40 text-base font-thin leading-none text-gray-700 p-3 focus:outline-none focus:border-red-600 mt-4 bg-white border-2 rounded-md border-gray-200' }}) }}
                        <li class="list-none font-thin  text-red-600 text-sm">{{ form_errors(form.mensaje) }}</li>
                    </div>
                </div>
                <div class="flex items-center justify-center w-full">
                    {{ form_widget(form.send, {'attr' : { 'class': 'mt-8 leading-none p-3 h-12 w-36 bg-black hover:bg-red-600 text-white rounded-md mx-auto text-xl flex justify-center' }}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}