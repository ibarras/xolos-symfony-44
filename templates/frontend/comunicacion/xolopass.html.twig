{% extends 'base.html.twig' %}

{% block content %}

    <div class="mx-5 md:mx-10 lg:mx-24 lg:mx-14 h-auto w-auto mt-36 md:mt-44 mb-20">
        {% if informacion is empty %}
            <h1 class=" text-center text-3xl text-gray-700 mb-28 lg:mt-10">SIN INFORMACIÃ“N POR EL MOMENTO...</h1>
        {% else %}
            <h1 class=" text-center text-3xl text-gray-700 mb-5 lg:mt-10">{{ informacion.titulo | upper }}</h1>
            <div class="text-justify text-base md:text-xl font-thin lg:mt-14 mb-16 text-gray-700">
                <article>{{ informacion.descripcion | raw | nl2br }}</article>
            </div>
        {% endif %}
        {% if beneficios is empty %}
            <h1 class=" text-center text-4xl text-gray-700 mb-10 lg:mt-10">SIN BENEFICIOS POR EL MOMENTO...</h1>
        {% else %}
            <h1 class=" text-center text-3xl text-gray-700 mb-10 lg:mt-10">BENEFICIOS DEL XOLOPASS</h1>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2">
                {% for beneficio in beneficios %}
                    <div class="flex justify-center relative">
                        <img class="" loading="lazy" src="{{ constant('App\\IcUtils\\IcConfig::IC_IMAGEN_BENEFICIO') }}{{ beneficio.imagen }}" alt="{{ beneficio.titulo }}">
                        <div class="overlay-red bg-red-600 w-full h-full absolute opacity-0 hover:opacity-100 transition-opacity duration-500 delay-75 grid items-center p-4 overflow-x-auto">
                            <p class="text-white text-justify font-thin text-lg">
                                {{ beneficio.descripcion | raw | nl2br }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

{% endblock %}