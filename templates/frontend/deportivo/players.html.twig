{% extends 'base.html.twig' %}

{% block content %}

    {# Portada #}
    <div class="w-full mx-auto bg-black flex justify-center">
        <div class="w-full mx-auto mt-20 bg-black bg-no-repea bg-top bg-cover text-center flex justify-center filter brightness-50"
             style="background-image: url({{ constant('App\\IcUtils\\IcConfig::IC_IMAGEN_APP') }}{{ background.imagen }}); height: 90vh;"></div>
        <p class="text-4xl md:text-5xl lg:text-7xl text text-white m-auto filter-none absolute top-80 md:top-96 left-50 font-extrabold underline text-center top-80 md:top-96"> {{ background.descripcion | upper }} </p>
    </div>

    <div class=" h-2 w-auto bg-red-600"></div>


    <div class="bg-black mt-20 mb-0 h-14 w flex w-44 md:w-52 justify-center mx-auto rounded-md">
        <h1 class="text-white text-2xl md:text-3xl m-auto font-semibold">DEFENSAS</h1>
    </div>

    <div class="swiper mySwiper2 w-full mt-14 mb-10 px-7" style="height: 490px;">
        <div class="swiper-wrapper ">

            {% for key, jugador in jugadores %}

                {% if jugadores[key].idPosicionJugador.idJugadorPosicion == 2 %}

                    {{ include('partials/jugadores.html.twig', {jugadores:'jugadores'}) }}

                {% endif %}

            {% endfor %}

        </div>
    </div>

    <div class=" h-2 w-auto mx-10 md:mx-18 xl:mx-32 bg-black flex justify-center"><img
                src="{{ asset('images/logo_new.png') }}" alt="" class="h-10 w-10 -mt-4"></div>
    <div class="h-1 w-auto mx-16 md:mx-24 xl:mx-48 bg-red-600"></div>


    <div class="bg-black mt-20 mb-0 h-14 w flex w-44 md:w-52 justify-center mx-auto rounded-md">
        <h1 class="text-white text-2xl md:text-3xl m-auto font-semibold">MEDIOS</h1>
    </div>

    <div class="swiper mySwiper2 w-full mt-14 mb-10 px-7" style="height: 490px;">
        <div class="swiper-wrapper ">

            {% for key, jugador in jugadores %}

                {% if jugadores[key].idPosicionJugador.idJugadorPosicion == 3 %}

                    {{ include('partials/jugadores.html.twig', {jugadores:'jugadores'}) }}

                {% endif %}

            {% endfor %}

        </div>
    </div>

    <div class=" h-2 w-auto mx-10 md:mx-18 xl:mx-32 bg-black flex justify-center"><img
                src="{{ asset('images/logo_new.png') }}" alt="" class="h-10 w-10 -mt-4"></div>
    <div class="h-1 w-auto mx-16 md:mx-24 xl:mx-48 bg-red-600"></div>


    <div class="bg-black mt-20 mb-0 h-14 w flex w-44 md:w-52 justify-center mx-auto rounded-md">
        <h1 class="text-white text-2xl md:text-3xl m-auto font-semibold"> DELANTEROS</h1>
    </div>

    <div class="swiper mySwiper2 w-full mt-14 mb-10 px-7" style="height: 490px;">
        <div class="swiper-wrapper ">

            {% for key, jugador in jugadores %}

                {% if jugadores[key].idPosicionJugador.idJugadorPosicion == 4 %}

                    {{ include('partials/jugadores.html.twig', {jugadores:'jugadores'}) }}

                {% endif %}

            {% endfor %}

        </div>
    </div>

    <div class=" h-2 w-auto mx-10 md:mx-18 xl:mx-32 bg-black flex justify-center"><img
                src="{{ asset('images/logo_new.png') }}" alt="" class="h-10 w-10 -mt-4"></div>
    <div class="h-1 w-auto mx-16 md:mx-24 xl:mx-48 bg-red-600"></div>



    <div class="bg-black mt-20 mb-0 h-14 w flex w-44 md:w-52 justify-center mx-auto rounded-md">
        <h1 class="text-white text-2xl md:text-3xl m-auto font-semibold"> PORTEROS</h1>
    </div>

    <div class="swiper mySwiper2 w-full mt-14 mb-10 px-7" style="height: 490px;">
        <div class="swiper-wrapper ">
            {% for key, jugador in jugadores %}
                {% if jugadores[key].idPosicionJugador.descripcion == "Portero" %}
                    {{ include('partials/jugadores.html.twig', {jugadores:'jugadores'}) }}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class=" h-2 w-auto bg-red-600"></div>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>

        //swiper de jugadores
        var mySwiper = new Swiper(".mySwiper2", {
            slidesPerView: 1,
            spaceBetween: 30,
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            breakpoints: {
                699: {
                    slidesPerView: 2,

                },
                1020: {
                    slidesPerView: 3,
                },
                1435: {
                    slidesPerView: 4,
                    spaceBetween: 10,
                },
            },
        });

    </script>

{% endblock %}